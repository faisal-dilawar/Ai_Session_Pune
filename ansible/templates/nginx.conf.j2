server {
    listen 80;
    server_name localhost;

    # 1. Backend API (Preserves /api/ prefix for Spring Boot @RequestMapping)
    location /api/ {
        proxy_pass http://localhost:8080;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # 2. Swagger 2 Support (Springfox)
    location /api/swagger-ui.html { proxy_pass http://localhost:8080/swagger-ui.html; }
    location /api/swagger-resources { proxy_pass http://localhost:8080/swagger-resources; }
    location /api/v2/api-docs       { proxy_pass http://localhost:8080/v2/api-docs; }
    location /api/webjars/          { proxy_pass http://localhost:8080/webjars/; }

    # 3. Admin Frontend
    location /admin/ {
        alias /var/www/admin/;
        index index.html;
        # Try the literal file first, then fall back to index.html for SPA routing
        try_files $uri $uri/ /admin/index.html;
    }

    # 4. Shop Frontend
    location /shop/ {
        alias /var/www/shop/;
        index index.html;
        try_files $uri $uri/ /shop/index.html;
    }

    # 5. Asset Catch-all (Fixes both apps requesting /assets/ from the root)
    location /assets/ {
        root /var/www/admin;
        # Try finding in /var/www/admin/assets/... then /var/www/shop/assets/...
        try_files $uri /../shop$uri =404;
    }

    # 6. Root redirect to Shop
    location = / {
        return 301 /shop/;
    }
}
